<h1 id="feed">FEEDBACKS:</h1>
<div class="testimonial-container">
    @if (Model != null && Model.Any())
    {
        int count = 0;
        foreach (var fb in Model)
        {
            <div class="testimonial-slide @(count == 0 ? "active" : "")">
                <img src="@fb.ImagePath" alt="@fb.Name" />
                <p>📝 "@fb.Description"</p>
                <h3>@fb.Name</h3>
                <h5>@fb.City</h5>
            </div>
            count++;
        }
    }
    else
    {
        <p>No feedback submitted yet.</p>
    }
</div>



