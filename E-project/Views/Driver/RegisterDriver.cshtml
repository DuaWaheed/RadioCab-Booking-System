@model E_project.Models.Driver

@{
    ViewData["Title"] = "RegisterDriver";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Driver Registration</title>
    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <form asp-controller="Driver" asp-action="RegisterDriver" method="post" class="form_main" id="companyForm">
            <p class="heading">Driver Registration</p>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="inputContainer">
                <input type="text" class="inputField" id="drivername" asp-for="DriverName" placeholder="Driver Name" />
                @Html.ValidationMessageFor(model => model.DriverName, "", new { @class = "text-danger custom-class" })
            </div>

            <div class="inputContainer">
                <input type="password" class="inputField" id="password" asp-for="Password" placeholder="Password" />
                <span class="eyeIcon" onclick="togglePassword('password', this)">
                    <i class="fas fa-eye" style="color: orange"></i>
                </span>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger custom-class" })
            </div>


            <div class="inputContainer">
                <input type="text" class="inputField" id="address" asp-for="Address" placeholder="Address" />
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger custom-class" })
            </div>

            <div class="inputContainer">
                <select class="inputField"
                        asp-for="City"
                        id="city"
                        style="width: 100%">
                    <option value="" disabled selected>Select Citye</option>
                    <!-- Manually added City Options -->
                    <option value="Karachi">Karachi</option>
                    <option value="Lahore">Lahore</option>
                    <option value="Islamabad">Islamabad</option>
                    <option value="Faisalabad">Faisalabad</option>
                    <option value="Peshawar">Peshawar</option>
                    <option value="Quetta">Quetta</option>

                </select>
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger custom-class" })

            </div>
            <div c

            <div class="inputContainer">
                <input type="text" class="inputField" id="mobile" asp-for="Mobile" placeholder="Mobile" />
                @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger custom-class" })
            </div>

            <div class="inputContainer">
                <input type="text" class="inputField" id="telephone" asp-for="Telephone" placeholder="Telephone" />
                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger custom-class" })
            </div>

            <div class="inputContainer">
                <input type="email" class="inputField" id="email" asp-for="Email" placeholder="Email" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger custom-class" })
            </div>

            <div class="inputContainer">
                <input type="number" class="inputField" id="experience" asp-for="Experience" placeholder="Experience (Years)" />
                @Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger custom-class" })
            </div>

            <div class="inputContainer">
                <textarea class="inputField" id="description" asp-for="Description" placeholder="Description"></textarea>
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger custom-class" })
            </div>

            <div class="inputContainer">
                <select class="inputField" asp-for="PaymentType" id="paymentType" onchange="showAmount()">
                    <option value="" disabled selected>Select Payment Type</option>
                    <option value="Monthly">Monthly</option>
                    <option value="Quaterly">Quaterly</option>
                </select>
                @Html.ValidationMessageFor(model => model.PaymentType, "", new { @class = "text-danger custom-class" })
            </div>

            <div class="inputContainer">
                <input type="text" class="inputField" id="paymentAmount" asp-for="PaymentAmount" placeholder="Payment Amount" readonly />
            </div>

            <div class="fileUploadBox">
                <label for="driverImage" class="uploadLabel">
                    <span class="uploadIcon">📁</span>
                    <span class="uploadText">Upload Driver Image</span>
                    <span class="uploadSubtext">PNG, JPG (Max: 2MB)</span>
                    <span class="customFileName" id="file-name">No file chosen</span>
                </label>
                <input type="file" class="fileHiddenInput" id="driverImage" accept="image/*" name="DriverImage" />
                @Html.ValidationMessageFor(model => model.DriverImage, "", new { @class = "text-danger custom-class" })
            </div>

            <div class="buttonContainer">
                <button type="button" id="resetButton" onclick="confirmReset()">Reset</button>
                <button type="submit" id="button">Register</button>
            </div>

            <div class="registerPrompt">
                <span>Already a member?</span>
                <a asp-controller="Driver" asp-action="LoginDriver" class="registerLink">Register</a>
            </div>
        </form>
    </div>

    <script>
        function showAmount() {
            const type = document.getElementById("paymentType").value;
            const amountField = document.getElementById("paymentAmount");
            let amount = "";

            if (type === "Monthly") {
                amount = "$15";
            } else if (type === "Quaterly") {
                amount = "$40";
            } 
            amountField.value = amount;
        }

         function confirmReset() {
            const form = document.getElementById("companyForm");

            // Show confirmation dialog
            const userConfirmed = confirm("Are you sure you want to reset the form?");

            if (userConfirmed) {
                // Clear all text, email, password, tel, and url inputs
                const inputs = form.querySelectorAll("input[type='text'],input[type='number'], input[type='email'], input[type='password'], input[type='tel'], input[type='url']");
                inputs.forEach(input => input.value = "");

                // Clear all textarea elements
                const textareas = form.querySelectorAll("textarea");
                textareas.forEach(textarea => textarea.value = "");

                // Clear select elements
                document.getElementById("paymentType").selectedIndex = 0;
                document.getElementById("paymentAmount").value = "";

                // Clear file input and its label
                document.getElementById("companyLogo").value = "";
                document.getElementById("file-name").textContent = "No file chosen";

                // Clear validation errors if you want (optional)
                const validationMessages = form.querySelectorAll(".text-danger, .text-dangers");
                validationMessages.forEach(msg => msg.textContent = "");
            } else {
                alert("Form reset was canceled.");
            }
        }

        function togglePassword(fieldId, iconSpan) {
            const field = document.getElementById(fieldId);
            const icon = iconSpan.querySelector("i");

            if (field.type === "password") {
                field.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                field.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }

        const fileInput = document.getElementById('driverImage');
        const fileNameSpan = document.getElementById('file-name');

        fileInput.addEventListener('change', function () {
            const fileName = this.files[0] ? this.files[0].name : "No file chosen";
            fileNameSpan.textContent = fileName;
        });
    </script>

    @section Scripts {
        <!-- These go at the bottom of the page for client-side validation -->
    }
</body>
</html>


