@model List<E_project.Models.Company>


@{
    ViewData["Title"] = "Company Listings";
}
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <style>
        body {
           
            background: white;
           
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            font-weight: 600;
        }

        .search-container {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-bottom: 30px;

        }

        .search-input {
            width: 50%;
            padding: 12px 18px;
            font-size: 16px;
            border: 2px solid #ddd;
            border-radius: 10px;
            outline: none;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            border-color: orange;
            box-shadow: 0 4px 10px darkorange;
            background-image: url('https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/icons/search.svg'); /* Bootstrap search icon */
            background-repeat: no-repeat;
            background-position: 10px center;
            background-size: 18px 18px;
            padding-left: 35px; /* to make space for the icon */
        }

            .search-input:focus {
                border-color: orange;
                box-shadow: 0 4px 10px darkorange;
            }

        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 25px;
            padding: 0 20px;
        }

        .card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
            border:solid orange 1px;
        }

            .card:hover {
                transform: translateY(-8px);
                /* box-shadow: 0 10px 20px rgba(0,0,0,0.2); */
                box-shadow: 0 4px 10px darkorange;
            }

            .card h3 {
                margin-top: 0;
                font-size: 24px;
                color: orange;
                margin-bottom: 10px;
            }

            .card p {
                margin: 6px 0;
                color: #555;
                font-size: 16px;
            }

            .card label {
                font-weight: 600;
                color: #333;
            }
    

        .logo-name {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
        }

        .logo-name {
            display: flex;
            align-items: flex-start;
            gap: 15px;
            margin-bottom: 15px;
        }

            .logo-name img {
                width: 60px;
                height: 60px;
                object-fit: contain;
                border-radius: 8px;
            }

        .name-designation h3 {
            margin: 0;
            font-size: 22px;
            color: #222;
            font-weight: 600;
        }

        .name-designation .designation {
            margin: 4px 0 0 0;
            font-size: 15px;
            color: #555;
            font-weight: 500;
        }

        .company-banner {
            background: linear-gradient(to right, #fdb541, #fd8f12);
            border-radius: 20px;
            padding: 30px;
            margin: 30px auto;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            max-width: 1200px;
        }

        .company-banner-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .company-banner .text {
            flex: 1 1 50%;
            color: #000;
            
        }

            .company-banner .text h2 {
                font-size: 2rem;
                font-weight: bold;
                right:0px;
                position:relative;
                color:black;
            }

            .company-banner .text p {
                margin: 10px 0;
                font-size: 1rem;
                font-size:18px;

            }

        .company-banner .start-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: white;
            color: #fd8f12;
            font-weight: bold;
            border-radius: 20px;
            text-decoration: none;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: background 0.3s ease;
        }

            .company-banner .start-btn:hover {
                background-color: #fef3e0;
            }

        .company-banner .image {
            flex: 1 1 40%;
            text-align: right;
        }

            .company-banner .image img {
                width: 350px;
                max-width: 100%;
                border-radius: 10px;
            }

        .app-link-button {
            background-color: orange; /* your theme's primary color */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            text-decoration: none !important;
            font-size: 15px;
            font-weight:bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .app-link-button:hover {
                background-color: #FFB347; /* lighter shade of orange */
                color:white;
            }

       
        
    </style>
</head>

<body>
    <section class="company-banner">
        <div class="company-banner-content">
            <div class="text">
                <h2 style="align-items:flex-end">Grow Your Business With Us</h2>
                <p>Register your company and get listed on our platform. Reach more customers, boost your visibility, and expand your services today!</p>
                <br />
                <a asp-Controller="Company" asp-action="RegisterCompany" class="start-btn">Register Now</a>
            </div>
            <div class="image">
                <img src="https://cdn.dribbble.com/userupload/22477637/file/original-1b01b8e4923f21272589594edcdc504e.gif" alt="Taxi">
            </div>
        </div>
    </section>

    
    <h2>Registered Companies</h2>

    <!-- Search Bar -->
    <div class="search-container">
        <input type="text" id="searchInput" class="search-input" placeholder="Search company name, city, or any detail..." onkeyup="filterCards()" />
    </div>

    <!-- Cards List -->
    <div id="cardContainer" class="card-container">
        @foreach (var company in Model)
        {
           
            <div class="card">
                <div class="logo-name">
                    @if (!string.IsNullOrEmpty(company.CompanyLogo))
                    {
                        <img src="@Url.Content("~/Companies/ " +@company.CompanyLogo)" asp - append - version="true" alt="Logo" />
                        @* <img src="@company.CompanyLogo" alt="Logo" style="max-width: 100px; max-height: 100px; margin-bottom: 10px;" /> *@
                    }
                    <div class="name-designation">
                        <h3 style="color:darkorange;">@company.CompanyName</h3>
                        <p class="designation">@company.Designation</p>
                    </div>
                </div>

                <p><label >Address:</label> @company.Address</p>
                <p><label >Mobile:</label> @company.Mobile</p>
                <p><label >Telephone:</label> @company.Telephone</p>
                <p><label>Fax Number:</label> @company.FaxNumber</p>
                <p><label>Email:</label> @company.Email</p>
                <p><label>City:</label> @company.City</p>
                <br />
                <p>
                    <a class="app-link-button" href="@company.CompanyAppLink" target="_blank">Download App</a>
                </p>

            </div>
        }
    </div>

    <script>
        function filterCards() {
            const input = document.getElementById("searchInput").value.toLowerCase();
            const cards = document.querySelectorAll("#cardContainer .card");

            cards.forEach(card => {
                const cardText = card.textContent.toLowerCase();

                if (cardText.includes(input)) {
                    card.style.display = "block";
                } else {
                    card.style.display = "none";
                }
            });
        }
    </script>

    

    

</body>
</html>
