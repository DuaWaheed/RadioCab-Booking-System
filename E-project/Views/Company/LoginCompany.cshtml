    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <script>
            function togglePassword(fieldId, iconSpan) {
          const field = document.getElementById(fieldId);
          const icon = iconSpan.querySelector("i");

          if (field.type === "password") {
            field.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
          } else {
            field.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
          }
        }
    </script>


</body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Bai Jamjuree', sans-serif;
    }

    .container {
        height: 100vh;
        width: 100%;
        /* background-color: #212121; */
        background-image: url();
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        background-size: cover;
    }

    .form_main {
        width: 400px;
        height: 500px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        background-color: rgb(255, 255, 255);
        border-radius: 5px;
        padding: 30px;
        /* box-shadow: rgba(209, 193, 255, 0.5) 0px 30px 90px; */
        /* box-shadow: rgba(209, 193, 255, 0.56) 0px 5px 90px 4px; */
        box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 70px 4px;
        position: relative;
        overflow: hidden;
    }

        .form_main::before {
            position: absolute;
            content: "";
            width: 300px;
            height: 300px;
            background: linear-gradient( to bottom right, rgb(255, 217, 141),
            /* Very light soft orange */ rgba(250, 225, 157, 0.9),
            /* Lighter pastel orange */ rgba(253, 223, 148, 0.85)
            /* Even lighter pastel orange */
            );
            transform: rotate(45deg);
            left: -180px;
            top: 75px;
            z-index: 1;
            border-radius: 30px;
            box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.082);
        }

    .heading {
        font-size: 3rem;
        color: orange;
        font-weight: 700;
        /* margin: 5px 0 10px 0; */
        z-index: 2;
    }

    .inputContainer {
        width: 100%;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 2;
    }

    .inputIcon {
        position: absolute;
        left: 3px;
    }

    .inputField {
        width: 100%;
        height: 50px;
        background-color: transparent;
        border: none;
        border-bottom: 2px solid rgb(173, 173, 173);
        /* margin: 10px 0; */
        color: black;
        font-size: 1rem;
        font-weight: 500;
        box-sizing: border-box;
        padding-left: 30px;
        transition: border-bottom .4s;
    }

        .inputField:focus {
            outline: none;
            border-bottom: 2px solid orange;
            transition: border-bottom .4s;
        }

        .inputField::placeholder {
            color: rgb(80, 80, 80);
            font-size: 1rem;
            font-weight: 500;
        }

    #button {
        z-index: 2;
        position: relative;
        width: 100%;
        border: none;
        border-radius: 5px;
        background: linear-gradient(to bottom right, orange, rgba(255, 193, 7, 0.9), rgba(248, 224, 7, 0.85) );
        height: 45px;
        color: white;
        font-size: 1.2rem;
        font-weight: 600;
        letter-spacing: 1px;
        /* margin: 10px; */
        cursor: pointer;
        transition: opacity 1s ease;
    }

        #button:hover {
            opacity: 0.8;
            transition: background-color 0.4s;
        }


    .forgotLink {
        z-index: 2;
        font-size: 0.9rem;
        font-weight: 500;
        color: red;
        text-decoration: none;
        margin-top: 10px;
        transition: color 0.3s, text-decoration 0.3s;
        align-self: flex-start;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

        .forgotLink:hover {
            color: black;
            text-decoration: underline;
        }


    .registerPrompt {
        z-index: 2;
        margin-top: 10px;
        text-align: center;
        font-size: 0.95rem;
        color: #2e2e2e;
    }

    .registerLink {
        color: orange;
        font-weight: bolder;
        margin-left: 5px;
        text-decoration: none;
        transition: color 0.3s;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

        .registerLink:hover {
            color: burlywood;
        }

    .roleContainer {
        width: 100%;
        margin-bottom: 10px;
        color: #2e2e2e;
        font-weight: 500;
        font-size: 1rem;
        z-index: 2;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    .roles label {
        display: block;
        margin: 5px 0;
        font-size: 0.95rem;
        cursor: pointer;
    }

    #para {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-weight: bold;
        right: 40px;
        color: darkred;
    }

    .eyeIcon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        font-size: 18px;
        color: #555;
        user-select: none;
    }
</style>

