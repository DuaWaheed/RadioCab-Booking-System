@model E_project.Models.Company

@{
    ViewBag.Title = "Company Profile";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="profile-container">
    <div class="profile-header">
        <img src="@Model.CompanyLogo" alt="Company Logo" class="profile-image" />
        <h2>@Model.CompanyName</h2>
        <p>
            <span class="badge @(Model.Status == "Paid" ? "bg-success" : "bg-danger")">@Model.Status</span>
        </p>
        <p>
            <span class="badge @(Model.ActivityState == "Active" ? "bg-success" : "bg-warning text-dark")">@Model.ActivityState</span>
        </p>
    </div>

    <div class="profile-details">
        <div class="detail-item"><strong>Contact Person:</strong> @Model.ContactPerson</div>
        <div class="detail-item"><strong>Designation:</strong> @Model.Designation</div>
        <div class="detail-item"><strong>Address:</strong> @Model.Address</div>
        <div class="detail-item"><strong>Mobile:</strong> @Model.Mobile</div>
        <div class="detail-item"><strong>Telephone:</strong> @Model.Telephone</div>
        <div class="detail-item"><strong>Fax Number:</strong> @Model.FaxNumber</div>
        <div class="detail-item"><strong>Email:</strong> @Model.Email</div>
        <div class="detail-item"><strong>Password:</strong> ********</div>
        <div class="detail-item"><strong>Payment Type:</strong> @Model.PaymentType</div>
        <div class="detail-item"><strong>Payment Amount:</strong> @Model.PaymentAmount</div>
        <div class="detail-item">
            <strong>Company App Link:</strong>
            <a href="@Model.CompanyAppLink" target="_blank">@Model.CompanyAppLink</a>
        </div>
        <div class="detail-item"><strong>Status Updated Date:</strong> @Model.StatusUpdatedDate.ToString("yyyy-MM-dd")</div>
    </div>

</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .profile-container {
        max-width: 700px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 15px;
        background: linear-gradient(145deg, #ffffff, #f0f0f0);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile-header {
        text-align: center;
        margin-bottom: 25px;
    }

    .profile-image {
        width: 140px;
        height: 140px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #ff6600;
        margin-bottom: 15px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    .badge {
        padding: 0.5em 1em;
        font-size: 0.85rem;
        margin-right: 5px;
        border-radius: 20px;
    }

    .profile-details {
        font-size: 15px;
    }

    .detail-item {
        margin: 10px 0;
        padding: 10px;
        background-color: #fafafa;
        border-left: 4px solid #ff6600;
        border-radius: 5px;
    }

        .detail-item strong {
            color: #444;
        }

    .update-button {
        text-align: center;
        margin-top: 30px;
    }

    .btn-update {
        display: inline-block;
        padding: 12px 30px;
        background-color: #ff6600;
        color: white;
        text-decoration: none;
        font-size: 15px;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

        .btn-update:hover {
            background-color: #e05500;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            transform: translateY(-2px);
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
